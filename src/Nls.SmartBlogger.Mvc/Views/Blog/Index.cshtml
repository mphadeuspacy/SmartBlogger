@model Nls.SmartBlogger.Mvc.ViewModels.Blog.BlogListViewModel

@{
    ViewBag.Title = "Blogs";
}

<h2>Blogs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Media Object | Bootstrap Based Admin Template - Material Design</title>
    <!-- Favicon-->
    <link rel="icon" href="../../favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="../../plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="../../plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="../../plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="../../css/style.css" rel="stylesheet">

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="../../css/themes/all-themes.css" rel="stylesheet" />
</head>

<body class="theme-red">

    <section class="content">
        <div class="container-fluid">
            <!-- Default Media -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <div class="body">
                                @using (Html.BeginForm("Index", "Blog", FormMethod.Get))
                                { 
                                    if (Model.Blogs != null && Model.Blogs.Any() == true)
                                    {
                                        foreach (var blog in Model.Blogs)
                                        {
                                            <div class="media">
                                                <div class="media-left">
                                                    <a href='@Url.Action("Details", "Blog", new {blogId = blog.BlogId})'>
                                                        <img class="media-object" src='@Url.Content(blog.ImageUrl)' width="100" height="100">
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <h4 class="media-heading">@blog.Title</h4> 
                                                    <p>@blog.Blurb</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p>No records found that meet the filtering criteria!</p>
                                    }
                                }
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Default Media -->

            </div>
        </div>
    </section>

    <!-- Jquery Core Js -->
    <script src="../../plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="../../plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Select Plugin Js -->
    <script src="../../plugins/bootstrap-select/js/bootstrap-select.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="../../plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Bootstrap Notify Plugin Js -->
    <script src="../../plugins/bootstrap-notify/bootstrap-notify.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="../../plugins/node-waves/waves.js"></script>

    <!-- Custom Js -->
    <script src="../../js/admin.js"></script>

    <!-- Demo Js -->
    <script src="../../js/demo.js"></script>
</body>

</html>
